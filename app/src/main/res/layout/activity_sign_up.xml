<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/regbackground"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adityasridhararao.carpoolpoc.SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register To Pool"
        android:id="@+id/tvRegister"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="2.5"
         />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/tvName"
        android:layout_above="@+id/etName"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:textColor="@android:color/secondary_text_light"
        android:shadowColor="@android:color/white"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        android:visibility="invisible" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:hint="Name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:textColorHint="@color/light_font"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvRegister"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:layout_marginTop="10dp"
        android:id="@+id/tvEmail"
        android:textColor="@android:color/secondary_text_light"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etEmail"
        android:shadowColor="@android:color/white"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        android:layout_alignStart="@+id/etEmail"
        android:visibility="invisible" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:hint="Email"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/light_font"
        android:layout_below="@id/etName"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/etName"
        android:layout_alignEnd="@+id/etName"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/tvPassword"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/etPasswordReg"
        android:layout_alignStart="@+id/etPasswordReg"
        android:shadowColor="@android:color/white"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        android:visibility="invisible" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPasswordReg"
        android:hint="Password"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/light_font"
        android:layout_below="@id/etEmail"
        android:layout_alignRight="@+id/etEmail"
        android:layout_alignEnd="@+id/etEmail"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:inputType="textPassword" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Phone"
        android:id="@+id/tvPhone"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etPasswordReg"
        android:layout_alignLeft="@+id/etPasswordReg"
        android:layout_alignStart="@+id/etPasswordReg"
        android:visibility="invisible"
        android:shadowColor="@android:color/white"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPhone"
        android:hint="Phone"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/light_font"
        android:layout_below="@id/etPasswordReg"
        android:layout_alignRight="@id/etPasswordReg"
        android:textColor="@android:color/white"
        android:layout_alignEnd="@id/etPasswordReg"
        android:layout_alignLeft="@id/etPasswordReg"
        android:layout_alignStart="@id/etPasswordReg"
        android:inputType="phone" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Photo"
        android:id="@+id/tvPhoto"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etPhone"
        android:layout_alignLeft="@+id/etPhone"
        android:layout_alignStart="@+id/etPhone"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/camera"
        android:id="@+id/ivURPhoto"
        android:layout_below="@+id/tvPhoto"
        android:layout_alignLeft="@+id/tvPhoto"
        android:layout_alignStart="@+id/tvPhoto" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Company Id"
        android:layout_marginRight="50dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        android:id="@+id/tvCompanyId"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/tvPhoto"
        android:layout_alignRight="@+id/etPhone"
        android:layout_alignEnd="@+id/etPhone" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera_id"
        android:id="@+id/ivCompanyId"
        android:layout_above="@+id/spCompany"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/tvCompanyId" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Company"
        android:layout_marginTop="30dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        android:id="@+id/tvCompany"
        android:textColor="@android:color/white"
        android:layout_below="@id/ivURPhoto"
        android:layout_alignStart="@+id/etName"
        android:layout_alignLeft="@id/spCompany"
        android:layout_alignEnd="@+id/etPhone" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spCompany"
        android:layout_marginTop="20dp"
        android:textColorHint="@android:color/secondary_text_dark"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/ivURPhoto"
        android:layout_alignStart="@+id/tvCompanyId"
        android:shadowColor="@android:color/white"
        android:popupBackground="#01579b"
        android:shadowDx="0.75"
        android:shadowDy="0.75"
        android:shadowRadius="0.75"
        style="@android:style/Widget.Material.DropDownItem.Spinner" />



    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a Car? Wanna drive?"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/swDriver"
        android:layout_below="@+id/spCompany"
        android:layout_alignEnd="@+id/etPhone"
        android:layout_alignStart="@+id/etName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRegister"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/swDriver"
        android:layout_alignEnd="@+id/etPhone"
        android:layout_alignStart="@+id/etName"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:text="Register"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:singleLine="false"
        android:textStyle="bold"
        android:elevation="10dp"
        android:outlineProvider="paddedBounds"
        android:elegantTextHeight="false"
        android:typeface="sans" />

</RelativeLayout>
</ScrollView>